@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor Accessor

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     <script src="~/lib/jquery/dist/jquery.min.js"> </script>
    <style>
        .background {
            background-color: rgb(23 107 145) !important
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-light  background     border-bottom-0">
        <div class="container-fluid">
            <a href="#" class="navbar-brand" style="color:white">
                @if (Accessor.HttpContext.Session.GetString("student_name") != null)
                {

                    <span style="color:yellow">Hi @Accessor.HttpContext.Session.GetString("student_name")</span>
                    <br />
                    <a class="text-white" style="font-weight:bold;color:blue" href="/Student/Logout"> Log Out </a>

                }
            </a>
            <!-- Navbar toggle button (hamburger icon) -->

            <button class="navbar-toggler d-block d-md-none"
                    type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#sidebar"
                    aria-controls="sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <a href="#" class="nav-item nav-link" style="color:white">Login</a>
                </div>
            </div>
        </div>

    </nav>

    <div class="offcanvas offcanvas-start background d-md-block"
         tabindex="-1" id="sidebar"
         aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-light"
                id="sidebarLabel">
                @if (Accessor.HttpContext.Session.GetString("student_name") != null)
                {
                
                            <span style="color:yellow"> @Accessor.HttpContext.Session.GetString("student_name")</span>
                            <a class="text-white" style="font-weight:bold;color:blue" href="/Student/Logout"> Log Out </a>
                     
                }

            </h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close">
            </button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active text-light"
                       href="#">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Student/Profile">
                        Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Student/Enrollment">
                        Enrollment
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Student/BatchDetails">
                        Batches
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Student/CourseSyllabus">
                        Course Syllabus
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Student/ViewTopics">
                        Give Exam
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/VideoConference/Index">
                        Video Conference
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/Account/LogOut">
                        Log Out
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="">
        <div class="row">
            <nav id="sidebarMenu"
                 class="col-md-3 col-lg-2 d-none
                        d-md-block bg-light sidebar">
                <div class="position-sticky background vh-100">
                    <div class="pt-3">
                        <h5 class="sidebar-heading d-flex
                                justify-content-between
                                align-items-center px-3
                                mt-4 mb-1 text-muted">
                            <span class="text-light">
                              
                            </span>
                        </h5>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active text-light"
                                   href="#">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Student/Profile">
                                    Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Student/Enrollment">
                                    Enrollment
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Student/BatchDetails">
                                    Batches
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Student/CourseSyllabus">
                                    Course Syllabus
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Student/ViewTopics">
                                    Give Exam
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/VideoConference/Index">
                                    Video Conference
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   href="/Account/LogOut">
                                    Log Out
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 ">
                <div class="pt-3">
                     @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->

</body>

</html>