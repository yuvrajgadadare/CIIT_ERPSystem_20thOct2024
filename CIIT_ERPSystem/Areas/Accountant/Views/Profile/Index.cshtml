@model ERPSystem_Models.EmployeeModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Accountant/Views/Shared/AccountantLayout.cshtml";
 }
<script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<div class="container" style="font-size:smaller">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex">
                <div class="flex-shrink-0">
                    <img src="~/assets/img/messages-1.jpg" class="rounded-circle" width="150" height="150" alt="Sample Image">
                    <h6 style="font-weight:bold">@Model.employee_name <small class="text-muted"><i></i></small></h6>
                    <h6>@Model.employee_code <small class="text-muted"><i></i></small></h6>
                    <h6 style="font-weight:bold">@Model.role_name <small class="text-muted"><i></i></small></h6>
                    <a type="button" class="link" >Change Password</a>
                    <br />
                    <br />
                    <input type="button" class="link" value="Change Password" />

                </div>
                <div class="flex-grow-1 ms-3">
                    @using(Html.BeginForm())
                    {
                        @Html.HiddenFor(e=>e.employee_id)
                          <div class="card">
                              <div class="card-body">
                                    <div class="row" style="padding:2%">
                                        <div class="mb-3">
                                            <label>Birth Date:</label>
                                            <input id="birth_date" name="birth_date" width="276" value="@Model.birth_date.ToShortDateString()" />
                                            <script>
                                                $('#birth_date').datepicker({
                                                    uiLibrary: 'bootstrap5'
                                                });
                                            </script>
                                        </div>
                                        <div class="mb-3">
                                            <label>Email Address:</label>
                                            @Html.TextBoxFor(e => e.email_address, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3">
                                            <label>Joining Date:</label>
                                            @*  @Html.TextBoxFor(e => e.joining_date, new { @class = "form-control" }) *@

                                            <input id="joining_date" name="joining_date" width="276" value="@Model.joining_date.ToShortDateString()" />
                                            <script>
                                                $('#joining_date').datepicker({
                                                    uiLibrary: 'bootstrap5'
                                                });
                                            </script>
                                        </div>
                                        <div class="mb-3">
                                            <label>Salary:</label>
                                            @Html.TextBoxFor(e => e.salary, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="row">
                                    <input  type="submit" value="Modify" class="btn btn-primary"/>
                                    </div> 
                              </div>
                          </div>
                  }
                </div>
            </div>
            <hr/>
           
        </div>
        <div class="col-md-4">
              
        </div>

    </div>
</div>
